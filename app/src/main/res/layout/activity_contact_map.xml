<?xml version="1.0"?>
<RelativeLayout tools:context="mycontactlist.example.com.my_contact_list.ContactMapActivity"
    android:id="@+id/mapContainer"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        android:layout_alignParentBottom="true"
        app:menu="@menu/navigation" />
    
     <fragment 
        android:id="@+id/contactMap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/navigation"
        android:layout_below="@+id/toolbar_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_map"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/showMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="left"
            tools:text="Location On"
            android:text="Location On"
            android:paddingLeft="40dp"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>

        <TextView
            android:id="@+id/mapType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="right"
            android:paddingRight="40dp"
            android:text="Satellite View"
            tools:text="Satellite View"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>
    </android.support.v7.widget.Toolbar>
</RelativeLayout>

